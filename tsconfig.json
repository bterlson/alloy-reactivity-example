{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "dist",
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.tsx",

  ],
  "exclude": ["node_modules", "dist"]
}